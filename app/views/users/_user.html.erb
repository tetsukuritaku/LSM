<div class="container">
  <div class="row">

<table class="table table-user">
  <div class="col-md-3">

  <h2>User info</h2>
  </div>
   <div class="col-md-8 offset-md-1">
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    </div>


       <%= link_to edit_user_path(@user.id), class:"btn btn-link" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>

    </tr>
  </tbody>
</table>